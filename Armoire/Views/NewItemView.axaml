<UserControl xmlns="https://github.com/avaloniaui"
			 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="220" d:DesignHeight="250"
			 xmlns:vm="using:Armoire.ViewModels"
             x:Class="Armoire.Views.NewItemView"
			 x:DataType="vm:NewItemViewModel">
	<UserControl.Styles>
		<Style Selector="TextBox">
			<Setter Property="BorderThickness" Value="1" />
			<Setter Property="BorderBrush" Value="Purple" />
			<Setter Property="Margin" Value="0 10 0 5" />
			<Setter Property="Height" Value="40" />
		</Style>
		<Style Selector="TextBlock">
			<Setter Property="Margin" Value="0 5 0 0" />
		</Style>
	</UserControl.Styles>
	<Border CornerRadius="10" BorderBrush="Purple" BorderThickness="1">
		<StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
			<TextBlock Margin="10">Prefered App Name: </TextBlock>
			<TextBox Watermark="Paint" Text="{Binding Name}"></TextBox>
			<TextBlock Margin="10">Choose Executable Name: </TextBlock>
			<ComboBox
				SelectedItem="{Binding NewExe}"
				ItemsSource ="{Binding ExecutableNames}"
				Width="200">
			</ComboBox>
			<Button Width="100" Command="{Binding Update}">Submit</Button>
		</StackPanel>
	</Border>
</UserControl>
