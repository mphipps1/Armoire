<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="400" d:DesignHeight="250"
             x:Class="Armoire.Views.NewEntryPopUp">
	<UserControl.Styles>
		<Style Selector="TextBox">
			<Setter Property="BorderThickness" Value="1" />
			<Setter Property="BorderBrush" Value="Purple" />
			<Setter Property="Margin" Value="0 10 0 5" />
			<Setter Property="Height" Value="40" />
		</Style>
		<Style Selector="TextBlock">
			<Setter Property="Margin" Value="0 5 0 0" />
		</Style>
	</UserControl.Styles>
	<Border CornerRadius="10" BorderBrush="Purple" BorderThickness="1">
	<StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
	    <TextBlock Text="Enter New Entry Name:" />
	    <TextBox Watermark="  Here" Width="300"></TextBox>
		<TextBlock Text="Enter Path If Item" />
		<TextBox Watermark="  Here"></TextBox>
		<Button Width="100">Submit</Button>
	</StackPanel>
	</Border>
</UserControl>
