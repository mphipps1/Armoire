<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="Armoire.Views.ApplicationMonitorView"
			 xmlns:vm="using:Armoire.ViewModels"
			 xmlns:viewModels="clr-namespace:Armoire.ViewModels"
			 x:DataType="vm:ApplicationMonitorViewModel">


	<UserControl.DataContext>
		<vm:ApplicationMonitorViewModel />
	</UserControl.DataContext>

	<Button Height="32" Width="32">
		<Button.Flyout>
			<Flyout Placement="Right">
				<ItemsControl ItemsSource="{Binding  ProcessList}">
					<ItemsControl.ItemTemplate>
						<DataTemplate>
							<Image Source="{Binding IconBmp}" Height="32" Width="32" />
						</DataTemplate>
					</ItemsControl.ItemTemplate>
				</ItemsControl>
			</Flyout>
		</Button.Flyout>
		
		
	</Button>

	
</UserControl>
